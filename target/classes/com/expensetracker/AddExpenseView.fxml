<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.expensetracker.AddExpenseController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox fx:id="categoryComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button fx:id="saveButton" onAction="#handleSave" text="Save" />
        <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" />
    </HBox>
</GridPane>