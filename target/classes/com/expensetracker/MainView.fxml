<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.expensetracker.MainViewController">
   <left>
      <VBox prefWidth="150.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button onAction="#handleAddExpense" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Add Expense" />
            <Button onAction="#handleEditExpense" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Edit Expense" />
            <Button onAction="#handleDeleteExpense" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Delete Expense" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <TableView fx:id="expenseTable" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date" />
          <TableColumn fx:id="categoryColumn" prefWidth="150.0" text="Category" />
            <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
          <TableColumn fx:id="descriptionColumn" prefWidth="275.0" text="Description" />
        </columns>
      </TableView>
   </center>
   <top>
      <Label text="My Expenses" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
   </top>
</BorderPane>